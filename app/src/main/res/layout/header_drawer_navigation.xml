<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/header_drawer_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:fontFamily="@font/cera_pro_bold"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/text_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/header_drawer_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/tus_necesidades_no_son_problemas_nuestros"
        android:fontFamily="@font/cera_pro_medium"
        android:textSize="16sp"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/text_color_hint"
        android:layout_marginBottom="6dp"
        app:layout_constraintTop_toBottomOf="@id/header_drawer_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/header_drawer_divider"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View android:id="@+id/header_drawer_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#B5B5B5"
        android:layout_marginHorizontal="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>